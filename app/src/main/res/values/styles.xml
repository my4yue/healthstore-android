<resources>

    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- 配置qmui提供的theme -->
        <!--<item name="qmui_round_btn_text_size">@dimen/qmui_btn_text_size</item>-->
        <!--<item name="qmui_round_btn_border_width">@dimen/qmui_btn_border_width</item>-->
        <!--<item name="qmui_round_btn_bg_color">@android:color/black</item>-->
        <item name="qmui_round_btn_border_color">@android:color/black</item>
        <item name="qmui_round_btn_text_color">@android:color/black</item>

        <item name="qmui_dialog_action_style">@style/App.Dialog.Action</item>
        <item name="qmui_dialog_edit_content_style">@style/App.Dialog.EditContent</item>
        <item name="qmui_dialog_title_style">@style/QMUI.Dialog.Title</item>

        <item name="QMUITopBarStyle">@style/App.TopBar</item>
        <item name="QMUICommonListItemViewStyle">@style/App.CommonList.ItemView</item>

    </style>

    <style name="App.TopBar" parent="QMUI.TopBar">
        <item name="qmui_topbar_bg_color">@color/qmui_config_color_black</item>
        <item name="qmui_topbar_title_color">@color/qmui_config_color_white</item>
        <item name="qmui_topbar_subtitle_color">@color/qmui_config_color_white</item>
        <item name="qmui_topbar_text_btn_color_state_list">@color/qmui_config_color_white</item>
        <item name="qmui_topbar_height">48dp</item>
        <item name="qmui_topbar_image_btn_height">48dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="qmui_topbar_need_separator">false</item>
    </style>

    <style name="App.CommonList.ItemView" parent="QMUI.CommonListItemView">
        <!--<item name="android:paddingLeft">?attr/qmui_content_padding_horizontal</item>-->
        <!--<item name="android:paddingRight">?attr/qmui_content_padding_horizontal</item>-->
        <!--<item name="android:background">?attr/qmui_s_list_item_bg_with_border_none</item>-->
        <item name="qmui_commonList_titleColor">?attr/qmui_config_color_gray_1</item>
        <item name="qmui_commonList_detailColor">?attr/qmui_config_color_gray_1</item>
    </style>

    <style name="App.Dialog.Action" parent="QMUI.Dialog.Action">
        <item name="android:textColor">@color/qmui_config_color_blue</item>
        <item name="qmui_dialog_action_icon_space">6dp</item>
        <item name="qmui_dialog_positive_action_text_color">@color/qmui_config_color_blue</item>
        <item name="qmui_dialog_negative_action_text_color">@color/qmui_config_color_red</item>
    </style>

    <style name="App.Dialog.EditContent" parent="QMUI.Dialog.EditContent">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
    </style>

    <style name="QMUI.Dialog.Title">
        <item name="android:textColor">?attr/qmui_config_color_black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingLeft">?attr/qmui_dialog_padding_horizontal</item>
        <item name="android:paddingRight">?attr/qmui_dialog_padding_horizontal</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="qmui_paddingBottomWhenNotContent">27dp</item>
    </style>

    <style name="TabTextView">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/qmui_config_color_white</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
